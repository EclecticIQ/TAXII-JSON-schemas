{
    "$schema": "http://json-schema.org/draft-04/schema",

    "title": "Schema for a Service Instance",
    "type": "object",

    "definitions": {
        "query": {
            "$ref": "file:query.json"
        },
        "content-binding": {
            "$ref": "file:content-binding.json"
        }
    },

    "required": ["address", "service_type", "service_version", "protocol_binding", "message_bindings"],

    "properties": {
        "service_type": {
            "enum" : ["DISCOVERY", "COLLECTION_MANAGEMENT", "INBOX", "POLL"]
        },
        "available": {
            "type": "boolean"
        },
        "address": {
            "type": "string",
            "format": "uri"
        },
        "service_version": {
            "type": "string"
        },
        "message_bindings": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "protocol_binding": {
            "type": "string"
        },
        "supported_queries": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/query"
            },
            "minItems": 0,
            "uniqueItems": true
        },
        "message": {
            "type": "string"
        }
    }
}

